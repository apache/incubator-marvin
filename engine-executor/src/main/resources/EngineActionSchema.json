{
  "$schema" : "http://json-schema.org/draft-04/schema" ,
  "id": "resource:/EngineActionSchema.json#",
  "actions": {
    "type": "array",
    "items": {
      "type": "object",
      "properties": {
        "name": {
          "description": "Engine action name",
          "type": "string"
        },
        "actionType": {
          "description": "Engine action type",
          "type": "string"
        },
        "port": {
          "description": "Engine action port",
          "type": "integer"
        },
        "host": {
          "description": "host name",
          "type": "string"
        },
        "artifactsToPersist": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "artifactsToLoad": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "name",
        "actionType",
        "port",
        "host"
      ]
    }
  }
}